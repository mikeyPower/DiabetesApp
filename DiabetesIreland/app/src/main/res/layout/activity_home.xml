<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.powerm3.diabetesireland.Home"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_label"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/infoButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/triangle"
                android:id="@+id/imageView6"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="84dp"
                tools:layout_editor_absoluteX="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_manage"
                android:id="@+id/profile_button"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/infoButton"
                android:background="#00FFFFFF"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_below="@+id/profile_button"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_save"
                android:id="@+id/tracker_button"
                android:background="@android:color/transparent"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/fitness_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tracker_button"
        android:layout_toLeftOf="@+id/profile_button"
        android:layout_toStartOf="@+id/profile_button"
        android:background="@android:color/transparent"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

</RelativeLayout>
